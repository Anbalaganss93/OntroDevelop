<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/inflater_tournament_venue_address_detail_item_iv_venue_map"
        android:layout_toStartOf="@+id/inflater_tournament_venue_address_detail_item_iv_venue_map">

    <com.ontro.customui.RegularTextView
        android:id="@+id/inflater_tournament_venue_address_detail_item_tv_ground_name"
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        customui:medium="roboto_regular.ttf" />

    <com.ontro.customui.RegularTextView
        android:id="@+id/inflater_tournament_venue_address_detail_item_tv_ground_address"
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:lineSpacingMultiplier="1.2"
        customui:medium="roboto_regular.ttf" />

    </LinearLayout>

    <ImageView
        android:id="@+id/inflater_tournament_venue_address_detail_item_iv_venue_map"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_map"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>