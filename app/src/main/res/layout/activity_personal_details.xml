<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:customui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    android:scrollbarThumbHorizontal="@null"
    android:scrollbarThumbVertical="@null">

    <LinearLayout
        android:id="@+id/outtouch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/personal_detail_profileimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/pd_username"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext_bg"
            android:drawableLeft="@drawable/pd_name"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/pd_name"
            android:gravity="center_vertical"
            android:hint="@string/pc_name"
            android:inputType="textPersonName|textCapSentences"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />

        <EditText
            android:id="@+id/pd_phonenumber"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:drawableLeft="@drawable/contact"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/contact"
            android:gravity="center_vertical"
            android:hint="@string/pc_contact"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />

        <com.ontro.customui.RegularTextView
            android:id="@+id/pd_dob"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:clickable="true"
            android:drawableLeft="@drawable/calendar"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/calendar"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:hint="@string/pc_dob"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            customui:medium="roboto_regular.ttf" />

        <RelativeLayout
            android:id="@+id/gender_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:clickable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/leftimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:paddingBottom="12dp"
                android:paddingEnd="0dp"
                android:paddingLeft="15dp"
                android:paddingRight="0dp"
                android:paddingStart="15dp"
                android:paddingTop="12dp"
                android:src="@drawable/name" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/pd_gender"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:popupBackground="#18212A"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/leftimage"
                android:backgroundTint="@color/white"
                android:layout_toRightOf="@id/leftimage" />

        </RelativeLayout>

        <com.ontro.customui.RegularTextView
            android:id="@+id/city_edit"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:clickable="true"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/location"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:hint="@string/pc_city"
            android:maxLines="1"
            android:minHeight="30dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />

        <com.ontro.customui.RegularTextView
            android:id="@+id/location_edit"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:clickable="true"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/location"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:hint="@string/pc_location"
            android:maxLines="1"
            android:minHeight="30dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />

        <EditText
            android:id="@+id/pd_height"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:drawableLeft="@drawable/height"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/height"
            android:gravity="center_vertical"
            android:hint="@string/pc_height"
            android:inputType="number"
            android:maxLength="3"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />

        <com.ontro.customui.RegularTextView
            android:id="@+id/activity_personal_details_tv_cm"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|end"
            android:maxLines="1"
            android:text="@string/pc_scale_height"
            android:textColor="@color/button_bg_color"
            android:textColorHint="@color/hint_color"
            customui:medium="roboto_regular.ttf" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/locationdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#1F2730"
                android:padding="10dp"
                android:visibility="gone" />

            <com.github.rahatarmanahmed.cpv.CircularProgressView
                android:id="@+id/activity_explore_player_list_progress_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="visible"
                app:cpv_animAutostart="true"
                app:cpv_indeterminate="true" />
        </FrameLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginEnd="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_bg_normal"
            android:padding="12dp"
            android:text="@string/pc_next"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="#ffffff" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
