<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <CheckBox
            android:id="@+id/chk_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:button="@drawable/player_checkbox" />

        <com.ontro.customui.RegularTextView
            android:id="@+id/tv_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/white"
            customui:medium="roboto_regular.ttf" />

        <EditText
            android:id="@+id/et_point_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/vs_circledrawable"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="@string/zero"
            android:inputType="number"
            android:maxLength="2"
            android:text="@string/zero"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/text_normal" />

        <EditText
            android:id="@+id/et_point_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/et_point_1"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/et_point_1"
            android:layout_toStartOf="@+id/et_point_1"
            android:background="@drawable/vs_circledrawable"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="@string/zero"
            android:inputType="number"
            android:maxLength="2"
            android:text="@string/zero"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/text_normal" />

        <EditText
            android:id="@+id/et_point_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/et_point_2"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/et_point_2"
            android:layout_toStartOf="@+id/et_point_2"
            android:background="@drawable/vs_circledrawable"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="@string/zero"
            android:inputType="number"
            android:maxLength="2"
            android:text="@string/zero"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/text_normal" />
    </RelativeLayout>
</LinearLayout>