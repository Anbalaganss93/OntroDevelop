<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_app_background"
    android:orientation="vertical"
    tools:context="com.ontro.MatchInviteDetailsActivity">

    <RelativeLayout
        android:id="@+id/activity_invite_detail_rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_color">

        <ImageView
            android:id="@+id/activity_invite_detail_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="5dp"
            android:src="@drawable/ic_back_arrow" />

        <com.ontro.customui.RegularTextView
            android:id="@+id/activity_invite_detail_tv_toolbar_text"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/activity_invite_detail_iv_back"
            android:layout_toRightOf="@id/activity_invite_detail_iv_back"
            android:text="@string/invitedetailtitle"
            android:textColor="@color/white"
            customui:medium="roboto_regular.ttf" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_invite_detail_rl_toolbar"
        android:layout_marginEnd="@dimen/activity_layout_right_margin"
        android:layout_marginLeft="@dimen/activity_layout_left_margin"
        android:layout_marginRight="@dimen/activity_layout_right_margin"
        android:layout_marginStart="@dimen/activity_layout_left_margin"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <com.ontro.customui.RegularTextView
            android:id="@+id/activity_invite_detail_tv_teamid"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:drawableLeft="@drawable/team"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/team"
            android:gravity="center_vertical"
            android:hint="@string/inv_myteam"
            android:inputType="number"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />

        <com.ontro.customui.RegularTextView
            android:id="@+id/activity_invite_detail_tv_opponentteamid"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:drawableLeft="@drawable/team"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/team"
            android:gravity="center_vertical"
            android:hint="@string/inv_opponentteam"
            android:inputType="number"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />

        <!--<com.ontro.customui.MediumTextView-->
            <!--android:id="@+id/activity_invite_detail_tv_match_type"-->
            <!--style="@android:style/TextAppearance.DeviceDefault.Small"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:background="@drawable/login_edittext_bg"-->
            <!--android:drawableLeft="@drawable/match_type"-->
            <!--android:drawablePadding="5dp"-->
            <!--android:drawableStart="@drawable/match_type"-->
            <!--android:gravity="center_vertical"-->
            <!--android:hint="@string/inv_matchtype"-->
            <!--android:inputType="number"-->
            <!--android:maxLines="1"-->
            <!--android:padding="12dp"-->
            <!--android:textColor="@color/white"-->
            <!--android:textColorHint="@color/hint_color" />-->

        <com.ontro.customui.RegularTextView
            android:id="@+id/activity_invite_detail_tv_location"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/location"
            android:gravity="center_vertical"
            android:hint="@string/inv_location"
            android:inputType="number"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />

        <com.ontro.customui.RegularTextView
            android:id="@+id/activity_invite_detail_tv_match_date"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:drawableLeft="@drawable/calendar"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/calendar"
            android:gravity="center_vertical"
            android:hint="@string/inv_matchdate"
            android:inputType="number"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color" />

    </LinearLayout>

    <Button
        android:id="@+id/activity_invite_detail_bt_invitesend"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:background="@drawable/button_bg_normal"
        android:padding="10dp"
        android:text="@string/invitesend"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="#ffffff" />
</RelativeLayout>
