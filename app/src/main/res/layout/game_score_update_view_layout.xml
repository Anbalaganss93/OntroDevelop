<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/game_score_update_teamone"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:layout_toEndOf="@id/activity_explore_player_list_iv_back"
            android:layout_toRightOf="@id/activity_explore_player_list_iv_back"
            android:background="@drawable/game_score_update_ed_drawable"
            android:gravity="center"
            android:hint="@string/zero"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/light_white" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/set_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/activity_explore_player_list_iv_back"
                android:layout_toRightOf="@id/activity_explore_player_list_iv_back"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/reseticon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_reset_grey"
                    android:visibility="invisible" />


                <com.ontro.customui.RegularTextView
                    android:id="@+id/game_score_set"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/set_bg_drawable"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    customui:medium="roboto_regular.ttf" />

                <ImageView
                    android:id="@+id/deleteicon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_close_grey"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_above="@id/set_container"
                android:layout_centerHorizontal="true"
                android:background="@color/text_normal" />

            <View
                android:id="@+id/bottomline"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_below="@id/set_container"
                android:layout_centerHorizontal="true"
                android:background="@color/text_normal" />
        </RelativeLayout>

        <EditText
            android:id="@+id/game_score_update_teamtwo"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:layout_toEndOf="@id/activity_explore_player_list_iv_back"
            android:layout_toRightOf="@id/activity_explore_player_list_iv_back"
            android:background="@drawable/game_score_update_ed_drawable"
            android:gravity="center"
            android:hint="@string/zero"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/light_white" />
    </RelativeLayout>
</RelativeLayout>