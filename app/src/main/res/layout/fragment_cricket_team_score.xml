<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customui="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/fragment_cricket_team_score_cv_batsmen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:elevation="@dimen/dp_2"
            card_view:cardBackgroundColor="@color/blue_69"
            card_view:cardCornerRadius="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_football_score_base">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10">

                        <com.ontro.customui.RegularTextView
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:text="@string/batsmen"
                            android:textColor="@color/button_bg_color"
                            customui:medium="roboto_regular.ttf" />

                        <com.ontro.customui.RegularTextView
                            android:id="@+id/batting_r"
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/run"
                            android:textAllCaps="false"
                            android:textColor="@color/color_cement"
                            customui:medium="roboto_regular.ttf" />

                        <com.ontro.customui.RegularTextView
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/ball"
                            android:textAllCaps="false"
                            android:textColor="@color/color_cement"
                            customui:medium="roboto_regular.ttf" />

                        <com.ontro.customui.RegularTextView
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fours"
                            android:textAllCaps="false"
                            android:textColor="@color/color_cement"
                            customui:medium="roboto_regular.ttf" />

                        <com.ontro.customui.RegularTextView
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/sixes"
                            android:textAllCaps="false"
                            android:textColor="@color/color_cement"
                            customui:medium="roboto_regular.ttf" />

                        <com.ontro.customui.RegularTextView
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/strike_rate"
                            android:textAllCaps="false"
                            android:textColor="@color/color_cement"
                            customui:medium="roboto_regular.ttf" />

                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/blue_105" />

                    <TableLayout
                        android:id="@+id/fragment_cricket_team_score_tl_players"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/_dp_10" />

                    <TableLayout
                        android:id="@+id/fragment_cricket_team_score_tl_more_player"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_12">

                        <com.ontro.customui.RegularTextView
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:text="@string/extras"
                            android:textColor="@color/white"
                            customui:medium="roboto_regular.ttf" />

                        <com.ontro.customui.RegularTextView
                            android:id="@+id/fragment_cricket_team_score_tv_extras"
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:paddingLeft="@dimen/dp_16"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            customui:medium="roboto_regular.ttf" />

                        <com.ontro.customui.RegularTextView
                            android:id="@+id/fragment_cricket_team_score_tv_extras_individual"
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="4"
                            android:gravity="start"
                            android:textAllCaps="false"
                            android:textColor="@color/color_cement"
                            customui:medium="roboto_regular.ttf" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/app_background_color">

                    <com.ontro.customui.RegularTextView
                        android:id="@+id/fragment_cricket_team_score_tv_more"
                        style="@android:style/TextAppearance.DeviceDefault.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:text="@string/more_player"
                        android:textColor="@color/color_cement"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:drawableEnd="@drawable/down_arr"
                        android:drawableRight="@drawable/down_arr"
                        android:drawablePadding="@dimen/dp_5"
                        customui:medium="roboto_regular.ttf"/>

                    <com.ontro.customui.RegularTextView
                        android:id="@+id/fragment_cricket_team_score_tv_less"
                        style="@android:style/TextAppearance.DeviceDefault.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:text="@string/less_player"
                        android:textColor="@color/color_cement"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:drawableEnd="@drawable/up_arr_white"
                        android:drawableRight="@drawable/up_arr_white"
                        android:drawablePadding="@dimen/dp_5"
                        customui:medium="roboto_regular.ttf"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/fragment_cricket_team_score_cv_bowlers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:elevation="@dimen/dp_2"
            card_view:cardBackgroundColor="@color/blue_69"
            card_view:cardCornerRadius="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10">

                        <com.ontro.customui.RegularTextView
                            android:id="@+id/mediumTextView2"
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:text="@string/bowlers"
                            android:textColor="@color/button_bg_color"
                            customui:medium="roboto_regular.ttf" />

                        <com.ontro.customui.RegularTextView
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/over"
                            android:textAllCaps="false"
                            android:textColor="@color/color_cement"
                            customui:medium="roboto_regular.ttf" />

                        <com.ontro.customui.RegularTextView
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/maiden"
                            android:textAllCaps="false"
                            android:textColor="@color/color_cement"
                            customui:medium="roboto_regular.ttf" />

                        <com.ontro.customui.RegularTextView
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/run"
                            android:textAllCaps="false"
                            android:textColor="@color/color_cement"
                            customui:medium="roboto_regular.ttf" />

                        <com.ontro.customui.RegularTextView
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/wicket"
                            android:textAllCaps="false"
                            android:textColor="@color/color_cement"
                            customui:medium="roboto_regular.ttf" />

                        <com.ontro.customui.RegularTextView
                            style="@android:style/TextAppearance.DeviceDefault.Small"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/economy"
                            android:textAllCaps="false"
                            android:textColor="@color/color_cement"
                            customui:medium="roboto_regular.ttf" />

                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/blue_105" />

                    <TableLayout
                        android:id="@+id/fragment_cricket_team_score_tl_bowlers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/_dp_10"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>