<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:customui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/inflater_player_invite_team_row_item_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#121921"
        android:padding="10dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/inflater_player_invite_team_row_item_iv_team"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="1dp"
            app:civ_shadow_color="#8BC34A" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@id/inflater_player_invite_team_row_item_iv_team"
            android:layout_toLeftOf="@id/inflater_player_invite_team_row_item_iv_team"
            android:layout_toRightOf="@id/inflater_player_invite_team_row_item_iv_team"
            android:orientation="vertical">

            <com.ontro.customui.RegularTextView
                android:id="@+id/inflater_player_invite_team_row_item_tv_name"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                customui:medium="roboto_regular.ttf" />

            <com.ontro.customui.RegularTextView
                android:id="@+id/inflater_player_invite_team_row_item_tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/location_new"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="12sp"
                customui:medium="roboto_regular.ttf" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/explore_container"
        android:background="#283038" />
</RelativeLayout>